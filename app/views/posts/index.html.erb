<p id="notice"><%= notice %></p>

<h1>Listing Posts</h1>

<table class="table">

  <thead>
    <tr>
      <th>标题</th>
      <th>内容</th>
      <th>是/否</th>
      <th>用户名</th>
      <th>创建时间</th>
      <th>更新时间</th>
      <th>发布时间</th>
      <th>操作</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.content %></td>
        <td><%= post.published %></td>
        <td><%= post.user.try(:username) %></td>


        <td><%= post.created_at.to_date %></td>
        <td><%= post.created_at.in_time_zone("Eastern Time (US & Canada)") %></td>
        <!--<td><%= post.updated_at %></td> -->
        <td><%= post.updated_at.in_time_zone("Eastern Time (US & Canada)") %></td>
        
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @posts %>

<br>

<%= link_to 'New Post', new_post_path %>
